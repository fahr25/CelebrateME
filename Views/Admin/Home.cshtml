
@model IEnumerable<CelebrateME.Models.Product>

@{
    ViewData["Title"] = "Shop Inventory";
}

<h2>Inventory</h2>

<p>
    <a class="btn btn-primary" asp-controller="Admin" asp-action="Create">Create New Product</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Category</th>
            <th>Points</th>
            <th>Inventory</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model ?? Enumerable.Empty<CelebrateME.Models.Product>())
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Category?.Name</td>
            <td>@item.Points</td>
            <td>@item.Inventory</td>
            <td>
                <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
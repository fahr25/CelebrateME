@model CelebrateME.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<h2>Create Product</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="Image" class="form-label"></label>
        <input asp-for="Image" class="form-control" />
    </div>
    <div class="row">
        <div class="col-md-3 mb-3">
            <label asp-for="Points" class="form-label"></label>
            <input asp-for="Points" class="form-control" />
        </div>
        <div class="col-md-3 mb-3">
            <label asp-for="Inventory" class="form-label"></label>
            <input asp-for="Inventory" class="form-control" />
        </div>
        <div class="col-md-3 mb-3">
            <label asp-for="MinAge" class="form-label"></label>
            <input asp-for="MinAge" class="form-control" />
        </div>
        <div class="col-md-3 mb-3">
            <label asp-for="MaxAge" class="form-label"></label>
            <input asp-for="MaxAge" class="form-control" />
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Category</label>
        <select asp-for="CategoryId" class="form-select" asp-items="@(ViewBag.Categories ?? ViewData["Categories"])">
            <option value="">-- Select category --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>